---
import '@/styles/globals.css'
import Layout from '@/layouts/layout.astro'

import { Image } from 'astro:assets'

import { getCollection } from 'astro:content'

const albumPosts = (await getCollection('albums')).sort((a, b) =>
  new Date(a.data.release_date) > new Date(b.data.release_date) ? -1 : 1,
)

const bookPosts = (await getCollection('books')).sort((a, b) =>
  new Date(a.data.published) > new Date(b.data.published) ? -1 : 1,
)
---

<Layout>
  <div
    class="container mx-auto flex h-screen w-full max-w-3xl flex-col items-start gap-y-12 px-4 pb-12 pt-4 lg:px-0"
  >
    <div class="px-auto py-2">
      <h1 class="py-2 text-4xl font-bold">Nathan's Blog</h1>
      <p class="text-xl">
        This is a blog for me to post about music, books and movies that I liked.
      </p>
    </div>
    <div class="px-auto items-start">
      <h1 class="py-2 text-2xl font-bold">Recent Music Posts</h1>
      <p class="text-lg">TODO: Add recent music posts here</p>
    </div>
    <div class="px-auto items-start">
      <h1 class="py-2 text-2xl font-bold">Recent Book Posts</h1>
      <p class="text-lg">TODO: Add recent book posts here</p>
    </div>
    <div class="px-auto items-start">
      <h1 class="py-2 text-2xl font-bold">Recent Movie Posts</h1>
      <p class="text-lg">Coming Soon...</p>
    </div>
  </div>
</Layout>
