---
import { Image } from 'astro:assets'

type Props = {
  id: string
  name: string
  artist: string
  image_url: string
}

const { id, name, artist, image_url } = Astro.props
---

<div class="flex flex-col">
  <a
    href={`/music/${id}`}
    class="group text-white transition-all duration-300 ease-in-out hover:text-gray-300"
  >
    <div class="relative shadow-md hover:shadow-lg" transition:name={`record-${id}`}>
      <Image
        class="card-image relative z-10 aspect-square rounded-md transition-all duration-300 ease-in-out group-hover:scale-105"
        src={image_url}
        alt={name}
        width="400"
        height="400"
      />
    </div>
    <p class="pt-4 font-semibold">{name}</p>
    <p class="pt-1">{artist}</p>
  </a>
</div>
