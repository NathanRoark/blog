---
import { Image } from 'astro:assets'

type Props = {
  albumId: string
  title: string
  imageUrl: string
}

const { imageUrl, title, albumId } = Astro.props
---

<div class="relative mr-32 w-72 shadow-xl md:w-auto">
  <Image
    src={imageUrl}
    alt={albumId}
    width="300"
    height="300"
    class="tag-album-cover relative block aspect-square rounded-md bg-white"
    style={`view-transition-name: record-${albumId};`}
  />
</div>
